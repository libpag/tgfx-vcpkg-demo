{
  "name": "tgfx-vcpkg-demo",
  "version": "1.0.0",
  "description": "TGFX Web Demo using vcpkg",
  "main": "server.js",
  "scripts": {
    "clean": "node -e \"const fs=require('fs'); ['build','dist','demo/build'].forEach(d=>{if(fs.existsSync(d))fs.rmSync(d,{recursive:true,force:true})})\"",
    "build": "node build.js --arch=wasm-mt",
    "build:st": "node build.js --arch=wasm",
    "build:debug": "node build.js --arch=wasm-mt --debug",
    "build:st:debug": "node build.js --arch=wasm --debug",
    "server": "node server.js wasm-mt",
    "server:st": "node server.js wasm"
  },
  "dependencies": {
    "express": "^4.18.2"
  }

}
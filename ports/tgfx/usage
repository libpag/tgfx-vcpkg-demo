The package tgfx can be used via CMake:

    if(CMAKE_BUILD_TYPE STREQUAL "Debug")
        set(VCPKG_LIB_DIR ${VCPKG_INSTALLED_DIR}/${VCPKG_TARGET_TRIPLET}/debug/lib)
    else()
        set(VCPKG_LIB_DIR ${VCPKG_INSTALLED_DIR}/${VCPKG_TARGET_TRIPLET}/lib)
    endif()
    set(VCPKG_INCLUDE_DIR ${VCPKG_INSTALLED_DIR}/${VCPKG_TARGET_TRIPLET}/include)

    find_path(TGFX_INCLUDE_DIR tgfx/core/Canvas.h)
    find_library(TGFX_LIBRARY NAMES tgfx)
    target_include_directories(main PRIVATE "${TGFX_INCLUDE_DIR}")
    target_link_libraries(main PRIVATE "${TGFX_LIBRARY}")
